{
  "name": "sport-predict-platform",
  "version": "1.0.0",
  "description": "Complete sports prediction and betting platform built on Solana blockchain",
  "private": true,
  "workspaces": [
    "frontend",
    "frontend-sportsbook",
    "frontend-etf",
    "backend",
    "ai-service",
    "blockchain"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:sportsbook\" \"npm run dev:etf\" \"npm run dev:ai\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:sportsbook": "cd frontend-sportsbook && npm run dev",
    "dev:etf": "cd frontend-etf && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai": "cd ai-service && python -m uvicorn main:app --reload --port 8001",
    "dev:blockchain": "cd blockchain && anchor build",
    "build": "npm run build:frontend && npm run build:sportsbook && npm run build:etf && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:sportsbook": "cd frontend-sportsbook && npm run build",
    "build:etf": "cd frontend-etf && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:blockchain": "cd blockchain && anchor build",
    "install:all": "npm install && npm run install:frontend && npm run install:sportsbook && npm run install:etf && npm run install:backend && npm run install:ai && npm run install:blockchain",
    "install:frontend": "cd frontend && npm install",
    "install:sportsbook": "cd frontend-sportsbook && npm install",
    "install:etf": "cd frontend-etf && npm install",
    "install:backend": "cd backend && npm install",
    "install:ai": "cd ai-service && pip install -r requirements.txt",
    "install:blockchain": "cd blockchain && npm install",
    "db:setup": "cd backend && npm run db:generate && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "test": "npm run test:frontend && npm run test:sportsbook && npm run test:etf && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:sportsbook": "cd frontend-sportsbook && npm run test",
    "test:etf": "cd frontend-etf && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:blockchain": "cd blockchain && npm run test",
    "lint": "npm run lint:frontend && npm run lint:sportsbook && npm run lint:etf && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:sportsbook": "cd frontend-sportsbook && npm run lint",
    "lint:etf": "cd frontend-etf && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:sportsbook && npm run lint:fix:etf && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:sportsbook": "cd frontend-sportsbook && npm run lint:fix",
    "lint:fix:etf": "cd frontend-etf && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "deploy:blockchain": "cd blockchain && npm run deploy:devnet",
    "deploy:blockchain:mainnet": "cd blockchain && npm run deploy:mainnet",
    "clean": "npm run clean:frontend && npm run clean:sportsbook && npm run clean:etf && npm run clean:backend && npm run clean:blockchain",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:sportsbook": "cd frontend-sportsbook && rm -rf node_modules dist",
    "clean:etf": "cd frontend-etf && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:blockchain": "cd blockchain && rm -rf node_modules target",
    "security:scan": "chmod +x security-scan.sh && ./security-scan.sh",
    "security:check": "npm run security:scan"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "sports",
    "betting",
    "prediction",
    "blockchain",
    "solana",
    "ai",
    "machine-learning",
    "react",
    "typescript",
    "nodejs",
    "python"
  ],
  "author": "SportPredict Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 